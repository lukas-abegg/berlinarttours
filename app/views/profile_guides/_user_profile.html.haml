.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .row
    .col-lg-12
      .title_tour
        = "#{profile.first_name} #{profile.last_name}"

  =render "show_gallery"

  .row
    .col-lg-12.col-xs-12
      .panel.panel-default.container-50
        .panel-body
          .row
            .col-lg-12.text-center
              %h2
                = "Guide-Beschreibung"
          .row
            .col-lg-4
              %br
              %br
              .row
                .col-lg-12
                  %i
                    = "Beschreibung:"
                  %br
                  = profile.description
                  %br
                  %br
            .col-lg-8
              %table.table.table-user-information
                %tbody
                  %tr
                    %td
                      = "Email "
                      %span.glyphicon.glyphicon-envelope
                    %td
                      = profile.email
                  %tr
                    %td Account Type
                    %td
                      = profile.account_type
                  %tr
                    %td Experience
                    %td
                      = profile.experience
                  %tr
                    %td Spezialisiert auf folgende Touren
                    %td
                      - profile.trip_types.split(',').each do |f|
                        - map = {/"/ => '', '['=>'', ']'=>''}
                        - map.each {|k,v| f.sub!(k,v)}
                        - map.each {|k,v| f.sub!(k,v)}
                        - if f.blank?
                          - next
                        - else
                          = "| " + f + " "
                      ="|"

  .row
    .col-lg-12.col-xs-12
      .panel.panel-default.container-50
        .panel-heading
          %h3.panel-title Kontaktdaten
        .panel-body
          %table.table.table-user-information
            %tbody
              %tr
                %td
                  = "Telefon "
                  %span.glyphicon.glyphicon-phone
                %td
                  = profile.phone
              %tr
                %td
                  = "Mobile "
                  %span.glyphicon.glyphicon-phone
                %td
                  = profile.mobile
              %tr
                %td
                  = "Adresse "
                  %span.glyphicon.glyphicon-map-marker
                %td
                  = profile.street
                  &nbsp
                  = profile.house_number
                  %br
                  = profile.postcode
                  = "/"
                  = profile.city
                  %br
                  = profile.country



  - if @extern.blank?
    .row
      .col-lg-12.col-xs-12
        .panel.panel-default.container-50
          .panel-heading
            %h3.panel-title Logindaten
          .panel-body
            %table.table.table-user-information
              %tbody
                %tr
                  %td Profile erstellt
                  %td
                    = profile.created_at
                %tr
                  %td Last Update
                  %td
                    = profile.updated_at
                %tr
                  %td Anzahl Logins
                  %td
                    = user.sign_in_count
                %tr
                  %td Letztes Login
                  %td
                    = user.last_sign_in_at
                %tr
                  %td Aktueller Login
                  %td
                    = user.current_sign_in_at