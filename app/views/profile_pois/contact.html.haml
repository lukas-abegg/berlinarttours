= form_for(@contact, html: {class:"form-search smaller"}) do |f|
  %h2.text-red
    ="Kontaktanfrage bei Guide"
  .row
    .col-lg-12
      ="#{@profile_guide.first_name} #{@profile_guide.last_name}"
      %br
      %br
  .row
    .col-lg-12
      %img.img-thumbnail.img-circle{:style => "width: 100px; height: 100px;",:src => @profile_guide.avatar.url(:medium)}
      %br
      %br

  .field.hidden
    = f.text_field :sender_name, :value => @sender_name
  .field.hidden
    = f.text_field :sender_email, :value => @sender_email
  .field.hidden
    = f.text_field :receiver_name, :value => @receiver_name
  .field.hidden
    = f.text_field :receiver_email, :value => @receiver_email
  .field
    = f.label "Betreff", class: 'control-label'
    %br/
    = f.text_field :subject, class: 'form-control'
    %span.help-block
  .field
    = f.label "Anfrage", class: 'control-label'
    %br/
    = f.text_area :reason, :rows => "10", class: 'form-control'
    %span.help-block
  .actions
    = f.submit 'Submit', class: 'btn btn-primary'
