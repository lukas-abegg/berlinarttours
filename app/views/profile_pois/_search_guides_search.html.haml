= form_for Search_Guide.new, :url=> profile_pois_search_guides_path, :html => {class:"form-search", :multipart => true } do |f|
  %h2.text-red
    ="Find your Guide"
  %br
  .field.col-md-4
    = f.label :first_name, class:'label-large text-red'
  .field.col-md-4
    = f.label :last_name, class:'label-large text-red'
  .field.col-md-4
    = f.label :email, class:'label-large text-red'

  .field.col-md-4
    = f.text_field :first_name, class:'input-block-level text-red', placeholder: 'Vorname'
  .field.col-md-4
    = f.text_field :last_name, class:'input-block-level text-red', placeholder: 'Nachname'
  .field.col-md-4
    = f.text_field :email, class:'input-block-level text-red', placeholder: 'Email'

  .field.col-md-4
    = f.label :city, class:'label-large text-red'
  .field.col-md-4
    = f.label :city, class:'label-large text-red'
  .field.col-md-4
    = f.label :country, class:'label-large text-red'


  .field.col-md-4
    = f.text_field :postcode, class:'input-block-level text-red', placeholder: 'PLZ'
  .field.col-md-4
    = f.text_field :city, class:'input-block-level text-red', placeholder: 'Stadt'
  .field.col-md-4
    = f.text_field :country, class:'input-block-level text-red', placeholder: 'Land'

  .actions
    = f.submit 'Search', class:'btn btn-large btn-primary'
