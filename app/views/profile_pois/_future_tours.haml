.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .row
    .col-md-12.col-lg-12
      .h1
        = "Geplante Touren"
      %br
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        .row
          - if @trip_requests.present?
            - @trip_requests.each do |trip|
              .col-md-6.col-xs-12
                .panel.panel-default.container-50
                  .panel-heading
                    %h3.panel-title Geplante Touren
                    .panel-body
                      .row
                        .col-lg-4
                          .row
                            .col-lg-12.text-center
                              %h2
                                = trip.trip_name
                          .row
                            .col-lg-12
                              %i
                                = "Tourist:"
                              %br
                              = trip.tourist_name
                              %br
                              %br
                        .col-lg-8
                          %table.table.table-user-information
                            %tbody
                              %tr
                                %td Tourteilnehmer
                                %td
                                  = trip.who_wants
                              %tr
                                %td Guide
                                %td
                                  = trip.guide_name
                              %tr
                                %td Datum
                                %td
                                  = trip.when
                              %tr
                                %td Bemerkungen
                                %td
                                  = trip.notes
                              %tr
                                %td Status
                                %td
                                  -if trip.request_status == "open"
                                    %i.fa.fa-gears.fa-3x.text-blue
                                  -elsif trip.request_status == "rejected"
                                    %i.fa.fa-times.fa-3x.text-red
                                  -else
                                    %i.fa.fa-check-square-o.fa-3x.text-green

          -else
            keine Touranfragen bisher vorhanden
            %br
