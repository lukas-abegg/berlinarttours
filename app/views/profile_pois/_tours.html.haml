.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .row
    .col-md-12.col-lg-12
      .h1
        = "Touren die diesen POI verwenden"
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        .row
          .col-xs-2.col-sm-2.col-md-2.col-lg-2
          .col-xs-8.col-sm-8.col-md-8.col-lg-8
            .panel.panel-default.container-50
              .panel-heading
                %h3.panel-title Touren die diesen POI verwenden insgesamt:
                .panel-body
                  .row
                    .col-lg-3
                    .col-lg-6
                      .row
                        .col-lg-12.text-center
                          - if @trips.present?
                            ="Anzahl Touren:"
                            = @trips.count

                          -else
                            keine Touren bisher vorhanden
                            %br
                        .col-xs-2.col-sm-2.col-md-2.col-lg-2
                    .col-lg-3
        .row
          - @trips.each do |t|
            - @profile_guide = Profile_Guide.where(:email => t.guide_email )
            - @profile_guide.each  do |p|
              .col-md-6.col-xs-12
                .panel.panel-default.container-50
                  .panel-heading
                    %h3.panel-title Tour
                  .panel-body
                    .row
                      .col-lg-4
                        .row
                          .col-lg-10.text-center
                            %h2
                              = t.name
                            %i
                              = "Guide:"
                            %br
                            = "#{p.first_name} #{p.last_name}"
                            %br
                            %br
                      .col-lg-8
                        %table.table.table-user-information
                          %tbody
                            %tr
                              %td Name
                              %td
                                = t.name
                            %tr
                              %td Description
                              %td
                                = t.description
                            %tr
                              %td Type
                              %td
                                = t.type
                            %tr
                              %td Guide
                              %td
                                = "#{p.first_name} #{p.last_name}"
                            %tr
                              %td
                              %td{colspan: 2}
                                %br
                                = link_to 'Tour', trips_show_external_path(:id => t.id, :extern => true, :anchor => 'body'), :target => "_blank", :class => 'btn btn-info pull-middle'
                                = link_to 'Guide', profile_guides_show_path(:profile_id => p.id, :extern => true, :anchor => 'body'), :target => "_blank", :class => 'btn btn-info pull-middle'
