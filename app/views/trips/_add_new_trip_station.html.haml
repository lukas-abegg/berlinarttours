= javascript_include_tag "search_pois"

- modal ||= false
- remote = modal ? true : false
= form_for Search_Poi.new, :url=> trip_path, :html => { :multipart => true, :method => 'get', :id => "pois_search" } do |f|
  .field.col-md-4
    = f.label :postcode, class:'label-large text-red'
  .field.col-md-4
    = f.label :city, class:'label-large text-red'
  .field.col-md-4
    = f.label :country, class:'label-large text-red'

  .field.col-md-4
    = f.text_field :postcode, class:'input-block-level text-red', placeholder: 'PLZ'
  .field.col-md-4
    = f.text_field :city, class:'input-block-level text-red', placeholder: 'Stadt'
  .field.col-md-4
    = f.text_field :country, class:'input-block-level text-red', placeholder: 'Land'

  .field.col-md-12
    %br
    .actions
      = f.submit 'Search', class:'btn btn-large btn-primary'
    %br

%div#results_div
  =render "show_search_results"
