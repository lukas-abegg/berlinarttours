= form_for Search_Tour.new, :url=> profiles_search_guides_path, :html => {class:"form-search", :multipart => true } do |f|
  %h2.text-red
    ="Find your Guide"
  %br
  .field.col-md-4
    = f.label :name, class:'label-large text-red'
  .field.col-md-4
    = f.label :type, class:'label-large text-red'
  .field.col-md-4
    = f.label :guide_email, class:'label-large text-red'

  .field.col-md-4
    = f.text_field :name, class:'input-block-level text-red', placeholder: 'Tourname'
  .field.col-md-4
    = f.select :type, options_for_select([' ','Kutur/Geschichte', 'Kunst', 'Shopping', 'Deluxe']), {class:'form-control' }
  .field.col-md-4
    = f.text_field :guide_email, class:'input-block-level text-red', placeholder: 'Guide Email'

  .actions
    = f.submit 'Search', class:'btn btn-large btn-primary'
